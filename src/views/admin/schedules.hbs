<div class="container d-flex justify-content-around align-items-center p-5">
  <div class="card border border-dark p-3 m-5 w-50 card-custom1">
    <form action="/admin/schedules/add" method="post">
      <div>
        <h1 class="font-custom1">Schedule<span class="bg-custom5">.</span></h1>
        <div class="mb-3">
          <label for="Day" class="form-label font-custom1">Day</label>
          <select class="form-control" name="Day" id="Day">
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thrusday">Thrusday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="Start_time" class="form-label font-custom1">Start time</label>
          <input type="time" class="form-control" id="Start_time" name="Start_time" required />
        </div>
        <div class="mb-3">
          <label for="End_time" class="form-label font-custom1">End time</label>
          <input type="time" class="form-control" id="End_time" name="End_time" required />
        </div>
        <div class="mb-3">
          <label for="NRC" class="form-label font-custom1">Course</label>
          <select class="form-control" name="NRC" id="NRC">
            {{#each courses}}
            <option value="{{NRC}}">{{NRC}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn w-100 font-custom1" style="background-color: #FF84E8;">Create</button>
      </div>
    </form>
  </div>
  <div class="card border border-dark p-3 m-5 w-50 card-custom1">
    <form id="Schedule_edit" action="" method="post">
      <div>
         <h1 class="font-custom1">Schedule<span class="bg-custom5">.</span></h1>
        <div class="mb-3">
          <label for="Day_edit" class="form-label font-custom1">Day</label>
          <select class="form-control" name="Day" id="Day_edit">
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="Start_time_edit" class="form-label font-custom1">Start time</label>
          <input type="time" class="form-control" id="Start_time_edit" name="Start_time" required />
        </div>
        <div class="mb-3">
          <label for="End_time_edit" class="form-label font-custom1">End time</label>
          <input type="time" class="form-control" id="End_time_edit" name="End_time" required />
        </div>
        <div class="mb-3">
          <label for="NRC_edit" class="form-label font-custom1">Course</label>
          <select class="form-control" name="NRC" id="NRC_edit">
            {{#each courses}}
            <option value="{{NRC}}">{{NRC}}</option>
            {{/each}}
          </select>
        </div>
        <button id="Button_edit" type="submit" class="btn w-100 font-custom1" style="background-color: #FF84E8;"
          disabled>Confirm</button>
      </div>
    </form>
  </div>
</div>
<div class="container d-flex justify-content-center p-5">
  <div class="card shadow mt-4 w-100 card-custom1">
    <div class="card-body">
      <div class="card-text">
        <table class="table text-center rounded-3 font-custom1">
          <thead class="table-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Day</th>
              <th scope="col">Start time</th>
              <th scope="col">End time</th>
              <th scope="col">NRC</th>
              <th scope="col">Borrar</th>
              <th scope="col">editar</th>
            </tr>
          </thead>
          <tbody>
            {{#each schedules}}
            <tr>
              <th scope="row">{{@index}}</th>
              <td>{{dates}}</td>
              <td>{{st_time}}</td>
              <td>{{fin_time}}</td>
              <td>{{NRC}}</td>
              <td><a href="/admin/schedules/delete/{{dates}}/{{st_time}}/{{fin_time}}/{{NRC}}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="bg-dark"
                    class="bi bi-trash shake" viewBox="0 0 16 16">
                    <path
                      d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z">
                    </path>
                    <path fill-rule="evenodd"
                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z">
                    </path>
                  </svg>
                </a></td>
              <td><a onclick="edit('{{dates}}','{{st_time}}','{{fin_time}}','{{NRC}}')">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="bg-dark" class="bi bi-pencil"
                    viewBox="0 0 16 16">
                    <path
                      d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z">
                    </path>
                  </svg>
                </a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
  function edit(i, j, k, l) {
    var form = document.getElementById('Schedule_edit');
    var day = document.getElementById("Day_edit");
    var start_time = document.getElementById("Start_time_edit");
    var end_time = document.getElementById("End_time_edit");
    var NRC = document.getElementById("NRC_edit");
    var button = document.getElementById("Button_edit");
    day.value = i;
    NRC.value = l;
    start_time.value = j;
    end_time.value = k;
    form.action = "/admin/schedules/edit/" + i+"/"+j+"/"+k+"/"+l;
    button.disabled = false;
  }
</script>