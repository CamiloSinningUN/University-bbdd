<div class="container d-flex justify-content-around align-items-center p-5">
  <div class="card border border-dark p-3 m-5 w-50 card-custom1">
    <form action="/admin/hires/add" method="post">
      <div>
        <h1 class="font-custom1">Student-Study plan<span class="bg-custom5">.</span></h1>
        <div class="mb-3">
          <label for="Code_sp" class="form-label font-custom1">Plan code</label>
          <select class="form-control" name="Code_sp" id="Code_sp">
            {{#each study_plans}}
            <option value="{{cod_sp}}">{{cod_sp}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="Code_st" class="form-label font-custom1">Student</label>
          <select class="form-control" name="Code_st" id="Code_st">
            {{#each students}}
            <option value="{{cod_stud}}">{{nameE}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn w-100 font-custom1" style="background-color: #FF84E8;">Create</button>
      </div>
    </form>
  </div>
  <div class="card border border-dark p-3 m-5 w-50 card-custom1">
    <form id="Hire_edit" action="" method="post">
      <div>
        <h1 class="font-custom1">Study plan - Subject edit<span class="bg-custom5">.</span></h1>
        <div class="mb-3">
          <label for="Code_sp_edit" class="form-label font-custom1">Plan code</label>
          <select class="form-control" name="Code_sp" id="Code_sp_edit">
            {{#each study_plans}}
            <option value="{{cod_sp}}">{{cod_sp}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="Code_st_edit" class="form-label font-custom1">Student</label>
          <select class="form-control" name="Code_st" id="Code_st_edit">
            {{#each students}}
            <option value="{{cod_stud}}">{{nameE}}</option>
            {{/each}}
          </select>
        </div>
        <button id="Button_edit" type="submit" class="btn w-100 font-custom1" style="background-color: #FF84E8;"
          disabled>Confirm</button>
      </div>
    </form>
  </div>
</div>
<div class="container d-flex justify-content-center p-5">
  <div class="card shadow mt-4 w-100 card-custom1">
    <div class="card-body">
      <div class="card-text">
        <table class="table text-center rounded-3 font-custom1">
          <thead class="table-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Plan code</th>
              <th scope="col">Student</th>
              <th scope="col">Borrar</th>
              <th scope="col">editar</th>
            </tr>
          </thead>
          <tbody>
            {{#each hires}}
            <tr>
              <th scope="row">{{@index}}</th>
              <td>{{cod_sp}}</td>
              <td>{{cod_stud}}</td>
              <td><a href="/admin/hires/delete/{{cod_sp}}/{{cod_stud}}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="bg-dark"
                    class="bi bi-trash shake" viewBox="0 0 16 16">
                    <path
                      d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z">
                    </path>
                    <path fill-rule="evenodd"
                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z">
                    </path>
                  </svg>
                </a></td>
              <td><a onclick="edit('{{cod_sp}}','{{cod_stud}}')">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="bg-dark" class="bi bi-pencil"
                    viewBox="0 0 16 16">
                    <path
                      d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z">
                    </path>
                  </svg>
                </a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
  function edit(i,j) {
    var form = document.getElementById('Hire_edit');
    var study_plan = document.getElementById('Code_sp_edit');
    var student = document.getElementById('Code_st_edit');
    var button = document.getElementById("Button_edit");
    study_plan.value = i;
    student.value = j;
    form.action = "/admin/hires/edit/" + i+"/"+j;
    button.disabled = false;
  }
</script>